{
  "compilerOptions": {
    "outDir": "dist/",
    "module": "commonjs",
    "target": "es6",
    "sourceMap": false,
    "allowJs": false,
    "moduleResolution": "node",
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": false,
    "experimentalDecorators": true,
    "declaration": true,
    "strict": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "dist/**/*",
    "test/**/*",
    "node_modules"
  ],
  "types": [
    "typePatches"
  ]
}
